{
  "name": "@nmbl/code-snippets-repo",
  "private": true,
  "version": "0.0.1",
  "repository": "https://github.com/nimblelight/code-snippets.git",
  "license": "MIT",
  "author": "John Rom <web@johnrom.com>",
  "engines": {
    "node": "14.19.1"
  },
  "scripts": {
    "build": "lerna run build",
    "build:library": "lerna run build --ignore @nmbl/code-snippets-website",
    "build:readme": "remark --rc-path ./package.json ./packages/code-snippets-website/content/index.md --output ./README.md",
    "build:docs-folder": "remark --rc-path ./package.json ./packages/code-snippets-website/content/docs --output ./docs/",
    "build:docs": "npm run build:readme && npm run build:docs-folder",
    "prepublishOnly": "lerna run prepublishOnly --stream",
    "prestart:website": "yarn build:library",
    "changeset:start-beta": "yarn changeset pre enter beta",
    "changeset:version": "yarn changeset version",
    "changeset:exit-beta": "yarn changeset pre exit",
    "changeset:publish": "yarn changeset publish",
    "publish:dry-run": "lerna publish --no-git-tag-version --no-push",
    "serve": "lerna run serve --stream",
    "setup": "npm run setup:npm && npm run setup:yarn && npm run setup:install",
    "setup:crossenv": "npm install -g cross-env",
    "setup:install": "yarn",
    "setup:npm": "npm run setup:crossenv && cross-env-shell \"nvm install $npm_package_engines_node && nvm use $npm_package_engines_node\"",
    "setup:yarn": "npm i -g yarn",
    "start": "lerna run start --stream",
    "start:website": "yarn --cwd ./packages/code-snippets-website start",
    "watch-all": "lerna run watch",
    "test": "lerna run test --stream --concurrency=1",
    "test:vscode": "lerna run test --stream --no-sort --"
  },
  "dependencies": {
    "@changesets/cli": "^2.21.1",
    "lerna": "^4.0.0",
    "remark-cli": "^10.0.1",
    "remark-frontmatter": "^4.0.1"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "resolutions": {
    "babel-plugin-syntax-trailing-function-commas": "6.22.0"
  },
  "remarkConfig": {
    "settings": {},
    "plugins": [
      [ "remark-frontmatter", { "type": "yaml", "marker": "-" }],
      [
        "@johnrom/remark-code-import",
        {
          "async": false,
          "basePath": "./packages/code-snippets-website"
        }
      ],
      [
        "@nmbl/code-snippets-remark-plugin",
        {}
      ]
    ]
  }
}
