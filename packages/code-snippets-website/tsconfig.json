{
  "include": ["./src"],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "jsx": "preserve",
    "lib": ["dom", "es2015", "es2017"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "baseUrl": "../../",
    "paths": {
      "@nmbl/code-snippets": ["packages/code-snippets/src"],
      "@nmbl/remark-code-snippet-remover": [
        "packages/remark-code-snippet-remover/src"
      ],
      "@nmbl/remark-code-snippets": ["packages/remark-code-snippets/src"],
      "@nmbl/gatsby-remark-code-snippet-remover": [
        "packages/gatsby-remark-code-snippet-remover/src"
      ],
      "@nmbl/gatsby-remark-code-snippets": [
        "packages/gatsby-remark-code-snippets/src"
      ]
    }
  }
}
